<UserControl
	x:Class="TombEditor.WPF.ToolWindows.Palette"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:TombEditor.WPF.ToolWindows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sg="clr-namespace:SpacedGridControl;assembly=SpacedGridControl"
	d:DesignHeight="120"
	d:DesignWidth="645"
	mc:Ignorable="d">

	<sg:SpacedGrid Margin="5" ColumnSpacing="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<StackPanel>
			<Button>
				<Image Width="16" Source="pack://application:,,,/TombEditor.WPF;component/Resources/icons_actions/actions_delete-16.png" />
			</Button>
			<Button Margin="0,5,0,0">
				<Image Width="16" Source="pack://application:,,,/TombEditor.WPF;component/Resources/icons_actions/actions_delete-16.png" />
			</Button>
			<Button Margin="0,5,0,0">
				<Image Width="16" Source="pack://application:,,,/TombEditor.WPF;component/Resources/icons_actions/actions_delete-16.png" />
			</Button>
		</StackPanel>

		<WindowsFormsHost x:Name="PaletteGridHost" Grid.Column="1" />
	</sg:SpacedGrid>
</UserControl>
