<UserControl
	x:Class="TombEditor.WPF.ToolWindows.Palette"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:sg="clr-namespace:SpacedGridControl;assembly=SpacedGridControl"
	d:DesignHeight="120"
	d:DesignWidth="645"
	mc:Ignorable="d">

	<sg:SpacedGrid Margin="{DynamicResource DefaultMargin}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<StackPanel>
			<Button x:Name="butResetToDefaults" Tag="ResetPalette">
				<Image Width="16" Source="/TombEditor.WPF;component/Resources/icons_actions/actions_refresh-16.png" />
			</Button>
			<ToggleButton
				x:Name="butSampleFromTextures"
				Margin="{DynamicResource VerticalStackPanelItem_DefaultMargin}"
				Tag="SamplePaletteFromTextures">
				<Image Width="16" Source="/TombEditor.WPF;component/Resources/icons_actions/actions_TextureMode-16.png" />
			</ToggleButton>
			<Button
				x:Name="butEditColor"
				Margin="{DynamicResource VerticalStackPanelItem_DefaultMargin}"
				Tag="EditObjectColor">
				<Image Width="16" Source="/TombEditor.WPF;component/Resources/icons_general/general_edit-16.png" />
			</Button>
		</StackPanel>

		<WindowsFormsHost x:Name="PaletteGridHost" Grid.Column="1" />
	</sg:SpacedGrid>
</UserControl>
