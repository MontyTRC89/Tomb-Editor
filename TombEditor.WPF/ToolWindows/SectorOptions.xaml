<UserControl
	x:Class="TombEditor.WPF.ToolWindows.SectorOptions"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:conv="clr-namespace:TombEditor.WPF.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:darkUI="clr-namespace:DarkUI.WPF;assembly=DarkUI.WPF"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
	xmlns:local="clr-namespace:TombEditor.WPF"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
	xmlns:rendering="clr-namespace:TombLib.Rendering;assembly=TombLib.Rendering"
	xmlns:sg="clr-namespace:SpacedGridControl;assembly=SpacedGridControl"
	MinWidth="285"
	MinHeight="256"
	d:DesignHeight="256"
	d:DesignWidth="285"
	md:DialogServiceViews.IsRegistered="True"
	mc:Ignorable="d">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary>
					<conv:VectorToBrushConverter x:Key="VectorToBrushConverter" />
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

	<sg:SpacedGrid Margin="{x:Static darkUI:Defaults.SmallThickness}">
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<WindowsFormsHost x:Name="Panel2DHost" />

		<sg:SpacedGrid Grid.Column="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<Button
				x:Name="butFloor"
				Background="{Binding Configuration.UI_ColorScheme.ColorFloor, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding ChangeThemeCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetFloor}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Trigger}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butFloor_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Floor_1-16.png" />
			</Button>
			<Button
				x:Name="butCeiling"
				Grid.Column="1"
				Background="{Binding Configuration.UI_ColorScheme.ColorFloor, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding SetCeilingCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetCeiling}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Trigger}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butCeiling_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Roof-16.png" />
			</Button>

			<Button
				x:Name="butBox"
				Grid.Row="1"
				Background="{Binding Configuration.UI_ColorScheme.ColorBox, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding SetBoxCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetBox}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Box}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butBox_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Box-16.png" />
			</Button>
			<Button
				x:Name="butNotWalkableBox"
				Grid.Row="1"
				Grid.Column="1"
				Background="{Binding Configuration.UI_ColorScheme.ColorNotWalkable, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding SetNotWalkableCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetNotWalkable}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.NotWalkableFloor}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butNotWalkableBox_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_NotWalkable-16.png" />
			</Button>

			<Button
				x:Name="butMonkey"
				Grid.Row="2"
				Background="{Binding Configuration.UI_ColorScheme.ColorMonkey, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding SetMonkeyswingCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetMonkeyswing}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Monkey}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butMonkey_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Monkey-16.png" />
			</Button>
			<Button
				x:Name="butDeath"
				Grid.Row="2"
				Grid.Column="1"
				Background="{Binding Configuration.UI_ColorScheme.ColorDeath, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding SetDeathCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetDeath}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Death}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butDeath_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Death-16.png" />
			</Button>

			<Button
				x:Name="butPortal"
				Grid.Row="3"
				Background="{Binding Configuration.UI_ColorScheme.ColorPortal, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding AddPortalCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize AddPortal,
				                         FindHotkeys=True}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Portal}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butPortal_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Portal -16.png" />
			</Button>
			<Button
				x:Name="butWall"
				Grid.Row="3"
				Grid.Column="1"
				Background="{Binding Configuration.UI_ColorScheme.ColorWall, Converter={StaticResource VectorToBrushConverter}}"
				Command="{Binding SetWallCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetWall}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Wall}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butWall_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Wall_1-16.png" />
			</Button>

			<Button
				x:Name="butFlagTriggerTriggerer"
				Grid.Row="4"
				Command="{Binding SetTriggerTriggererCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetTriggerTriggerer}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.TriggerTriggerer}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butFlagTriggerTriggerer_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_TriggerTriggerer-16.png" />
			</Button>
			<Button
				x:Name="butFlagBeetle"
				Grid.Row="4"
				Grid.Column="1"
				Command="{Binding SetBeetleCheckpointCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetBeetleCheckpoint}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Beetle}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butFlagBeetle_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_Beetle-16.png" />
			</Button>

			<Button
				x:Name="butClimbPositiveZ"
				Grid.Row="5"
				Command="{Binding SetClimbPositiveZCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetClimbPositiveZ}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Climb}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butClimbPositiveZ_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_ClimbNorth-16.png" />
			</Button>
			<Button
				x:Name="butClimbNegativeZ"
				Grid.Row="5"
				Grid.Column="1"
				Command="{Binding SetClimbNegativeZCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetClimbNegativeZ}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Climb}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butClimbNegativeZ_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_ClimbSouth_1-16.png" />
			</Button>

			<Button
				x:Name="butClimbNegativeX"
				Grid.Row="6"
				Command="{Binding SetClimbNegativeXCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetClimbNegativeX}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Climb}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butClimbNegativeX_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_ClimbWest-16.png" />
			</Button>
			<Button
				x:Name="butClimbPositiveX"
				Grid.Row="6"
				Grid.Column="1"
				Command="{Binding SetClimbPositiveXCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize SetClimbPositiveX}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Climb}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butClimbPositiveX_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_ClimbEast-16.png" />
			</Button>

			<Button
				x:Name="butAddGhostBlock"
				Grid.Row="7"
				Command="{Binding AddGhostBlocksToSelectionCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize AddGhostBlocksToSelection}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.Trigger}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butAddGhostBlock_Image" Source="/TombEditor.WPF;component/Resources/icons_objects/objects_geometry-override-16.png" />
			</Button>
			<Button
				x:Name="butForceSolidFloor"
				Grid.Row="7"
				Grid.Column="1"
				Command="{Binding ToggleForceFloorSolidCommand}"
				Style="{DynamicResource ButtonWithIconOnly}"
				ToolTip="{local:Localize ToggleForceFloorSolid}">
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="MouseEnter">
						<i:InvokeCommandAction Command="{Binding SetSectorColoringInfoPriorityCommand}" CommandParameter="{x:Static rendering:SectorColoringType.ForceFloorSolid}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
				<Image x:Name="butForceSolidFloor_Image" Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_ForceSolidFloor-16 copy.png" />
			</Button>
		</sg:SpacedGrid>

		<sg:SpacedGrid Grid.Row="1" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Button Command="{Binding FloorStepCommand}" Style="{DynamicResource ButtonWithIconAndText}">
				<StackPanel Orientation="Horizontal">
					<Image Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_StepFloor_1-16.png" />
					<TextBlock Text="{local:Localize FloorStep}" />
				</StackPanel>
			</Button>
			<Button
				Grid.Column="1"
				Padding="{x:Static darkUI:Defaults.InputControl_DefaultPadding}"
				Command="{Binding CeilingStepCommand}"
				Style="{DynamicResource ButtonWithIconAndText}">
				<StackPanel Orientation="Horizontal">
					<Image Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_StepCeiling-16.png" />
					<TextBlock Text="{local:Localize CeilingStep}" />
				</StackPanel>
			</Button>
			<Button
				Grid.Column="2"
				Command="{Binding DiagonalWallCommand}"
				Style="{DynamicResource ButtonWithIconAndText}">
				<StackPanel Orientation="Horizontal">
					<Image Source="/TombEditor.WPF;component/Resources/icons_sectortype/sectortype_DiagonalWall2-16.png" />
					<TextBlock Text="{local:Localize DiagonalWall}" />
				</StackPanel>
			</Button>
		</sg:SpacedGrid>
	</sg:SpacedGrid>
</UserControl>
