<Window
    x:Class="TombEditor.WPF.Views.AnimatedTexturesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:darkCtrl="clr-namespace:DarkUI.WPF.CustomControls;assembly=DarkUI.WPF"
    xmlns:darkUI="clr-namespace:DarkUI.WPF;assembly=DarkUI.WPF"
    xmlns:local="clr-namespace:TombEditor.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sg="clr-namespace:SpacedGridControl;assembly=SpacedGridControl"
    xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="{local:Localize AnimatedTexturesTitle}"
    Width="810"
    Height="630"
    MinWidth="810"
    MinHeight="630"
    Style="{DynamicResource CustomWindowStyle}"
    mc:Ignorable="d">

    <sg:SpacedGrid Margin="{x:Static darkUI:Defaults.SmallThickness}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*" />
            <ColumnDefinition Width="40*" />
        </Grid.ColumnDefinitions>
        <sg:SpacedGrid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </sg:SpacedGrid.RowDefinitions>
        <sg:SpacedGrid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="{local:Localize AnimationSet}" />
            <darkCtrl:SearchableComboBox Grid.Column="1" />
            <sg:SpacedGrid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Style="{DynamicResource ButtonWithIconOnly}"
                    ToolTip="{local:Localize EditSetButton}">
                    <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_edit-16.png" />
                </Button>
                <Button
                    Grid.Column="1"
                    Style="{DynamicResource ButtonWithIconOnly}"
                    ToolTip="{local:Localize AddSetButton}">
                    <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_plus_math-16.png" />
                </Button>
                <Button
                    Grid.Column="2"
                    Style="{DynamicResource ButtonWithIconOnly}"
                    ToolTip="{local:Localize DeleteSetButton}">
                    <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_trash-16.png" />
                </Button>
            </sg:SpacedGrid>
        </sg:SpacedGrid>
        <sg:SpacedGrid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GroupBox Header="{local:Localize Frames}">
                <sg:SpacedGrid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <DataGrid ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="{local:Localize Image}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Image Name="Image" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="{local:Localize Texture}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <darkCtrl:SearchableComboBox />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="{local:Localize Repeat}" />
                            <DataGridTextColumn Header="{local:Localize Area}" />
                            <DataGridTextColumn Header="{local:Localize Edge0}" />
                            <DataGridTextColumn Header="{local:Localize Edge1}" />
                            <DataGridTextColumn Header="{local:Localize Edge2}" />
                            <DataGridTextColumn Header="{local:Localize Edge3}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <sg:SpacedGrid Grid.Column="1">
                        <sg:SpacedGrid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </sg:SpacedGrid.RowDefinitions>
                        <Button
                            Grid.Row="0"
                            Style="{DynamicResource ButtonWithIconOnly}"
                            ToolTip="{local:Localize AddFrameButton}">
                            <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_plus_math-16.png" />
                        </Button>
                        <Button
                            Grid.Row="1"
                            Style="{DynamicResource ButtonWithIconOnly}"
                            ToolTip="{local:Localize DeleteFrameButton}">
                            <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_trash-16.png" />
                        </Button>
                        <Button
                            Grid.Row="2"
                            Style="{DynamicResource ButtonWithIconOnly}"
                            ToolTip="{local:Localize EditFrameButton}">
                            <Image Source="/TombEditor.WPF;component/Resources/icons_actions/actions_refresh-16.png" />
                        </Button>
                        <DockPanel
                            Grid.Row="3"
                            Width="25"
                            VerticalAlignment="Stretch"
                            Background="Firebrick"
                            Visibility="Hidden">
                            <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_Warning-16.png" />
                        </DockPanel>
                        <Button
                            Grid.Row="4"
                            VerticalAlignment="Bottom"
                            Style="{DynamicResource ButtonWithIconOnly}"
                            ToolTip="{local:Localize PrevFrame}">
                            <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_ArrowUp-16.png" />
                        </Button>
                        <Button Grid.Row="5" Style="{DynamicResource ButtonWithIconOnly}">
                            <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_ArrowDown-16.png" ToolTip="{local:Localize NextFrame}" />
                        </Button>
                    </sg:SpacedGrid>
                </sg:SpacedGrid>
            </GroupBox>
        </sg:SpacedGrid>
        <sg:SpacedGrid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="133" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0">
                <GroupBox Header="{local:Localize ProcAnimTool}">
                    <sg:SpacedGrid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <sg:SpacedGrid.RowDefinitions>
