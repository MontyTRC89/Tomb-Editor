                        </sg:SpacedGrid.RowDefinitions>
                        <sg:SpacedGrid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                Content="{local:Localize Animator}" />
                            <Label
                                Grid.Column="1"
                                Width="63"
                                Content="{local:Localize ProgressPerc}" />
                            <Label
                                Grid.Column="2"
                                Width="68"
                                Content="{local:Localize Frames}" />
                        </sg:SpacedGrid>
                        <sg:SpacedGrid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ComboBox
                                Grid.Column="0"
                                HorizontalAlignment="Stretch"
                                ToolTip="Animation type">
                                <ComboBoxItem Content="{local:Localize StretchHorizontal}" />
                                <ComboBoxItem Content="{local:Localize StretchVertical}" />
                                <ComboBoxItem Content="{local:Localize Scale}" />
                                <ComboBoxItem Content="{local:Localize SkewHorizontalRL}" />
                                <ComboBoxItem Content="{local:Localize SkewHorizontalLR}" />
                                <ComboBoxItem Content="{local:Localize SkewVerticalRL}" />
                                <ComboBoxItem Content="{local:Localize SkewVerticalLR}" />
                                <ComboBoxItem Content="{local:Localize Spin}" />
                                <ComboBoxItem Content="{local:Localize PanHorizontal}" />
                                <ComboBoxItem Content="{local:Localize Frames}" />
                                <ComboBoxItem Content="{local:Localize Shake}" />
                            </ComboBox>
                            <xceed:IntegerUpDown
                                Grid.Column="1"
                                Width="64"
                                ToolTip="Effect progress or strength" />
                            <xceed:IntegerUpDown
                                Grid.Column="2"
                                Width="68"
                                ToolTip="Amount of resulting animation frames" />
                        </sg:SpacedGrid>
                        <sg:SpacedGrid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" Content="{local:Localize Symmetric}" />
                            <CheckBox
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                Content="{local:Localize Smooth}" />
                            <sg:SpacedGrid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    Style="{DynamicResource ButtonWithIconOnly}"
                                    ToolTip="Generate new animation">
                                    <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_create_new-16.png" />
                                </Button>
                                <Button
                                    Grid.Column="1"
                                    Style="{DynamicResource ButtonWithIconOnly}"
                                    ToolTip="Generate and merge into copy of current animation">
                                    <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_copy-16.png" />
                                </Button>
                                <Button
                                    Grid.Column="2"
                                    Style="{DynamicResource ButtonWithIconOnly}"
                                    ToolTip="Generate and merge into current animation">
                                    <Image Source="/TombEditor.WPF;component/Resources/icons_actions/actions_Merge-16.png" />
                                </Button>
                                <Button
                                    Grid.Column="3"
                                    Style="{DynamicResource ButtonWithIconOnly}"
                                    ToolTip="Generate and add frames after current sequence frame">
                                    <Image Source="/TombEditor.WPF;component/Resources/icons_general/general_plus_math-16.png" />
                                </Button>
                                <Button
                                    Grid.Column="4"
                                    Style="{DynamicResource ButtonWithIconOnly}"
                                    ToolTip="Generate and replace current animation">
                                    <Image Source="/TombEditor.WPF;component/Resources/icons_actions/actions_refresh-16.png" />
                                </Button>
                            </sg:SpacedGrid>
                        </sg:SpacedGrid>
                    </sg:SpacedGrid>
                </GroupBox>
