<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:DarkUI.WPF">

	<Style x:Key="{x:Static SystemParameters.FocusVisualStyleKey}">
		<Setter Property="Control.Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						SnapsToDevicePixels="{x:Static local:Defaults.SnapsToDevicePixels}"
						Stroke="{DynamicResource Brush_FocusHighlight}"
						StrokeThickness="{x:Static local:Defaults.BorderThicknessWidth}"
						UseLayoutRounding="{x:Static local:Defaults.UseLayoutRounding}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>
