<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sg="clr-namespace:SpacedGridControl;assembly=SpacedGridControl">

	<Style TargetType="{x:Type sg:SpacedGrid}">
		<Setter Property="ColumnSpacing" Value="4" />
		<Setter Property="RowSpacing" Value="4" />
	</Style>

	<Style x:Key="ButtonIcon" TargetType="{x:Type Image}">
		<Setter Property="Width" Value="16" />
	</Style>
</ResourceDictionary>
